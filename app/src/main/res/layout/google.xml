<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_google"
        android:layout_width="127dp"
        android:layout_height="60dp"
        android:src="@drawable/google"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_search"
        android:layout_width="341dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="154dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="검색"
        android:paddingLeft="25dp"
        android:gravity=""
        android:textSize="20sp"
        android:textColorHint="#5F6266"
        android:background="@drawable/google_radius"
        android:backgroundTint="#F1F2F4"
        />
    
    <TextView
        android:id="@+id/text_smile1"
        android:layout_width="154dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/text_search"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="35dp"
        android:backgroundTint="#F1F2F4"
        android:background="@drawable/google_radius"
        android:hint="\n스마일"
        android:textSize="12sp"
        android:paddingLeft="70dp"
        android:textColorHint="#000"
        />

    <TextView
        android:id="@+id/text_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바로가기"
        android:textSize="10sp"
        android:textColor="#828387"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="105dp"/>
    
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="248dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="53dp"/>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@drawable/smile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="236dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/text_smile2"
        android:layout_width="154dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/text_search"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/text_smile1"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#F1F2F4"
        android:background="@drawable/google_radius"
        android:hint="\n스마일"
        android:textSize="12sp"
        android:paddingLeft="70dp"
        android:textColorHint="#000"
        />

    <TextView
        android:id="@+id/text_go1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바로가기"
        android:textSize="10sp"
        android:textColor="#828387"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        app:layout_constraintStart_toStartOf="@id/text_go1"
        android:layout_marginLeft="275dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="248dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="223dp"/>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@drawable/smile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="236dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="210dp"/>

    <TextView
        android:id="@+id/text_smile3"
        android:layout_width="154dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/text_search"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/text_smile2"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#F1F2F4"
        android:background="@drawable/google_radius"
        android:hint="\n스마일"
        android:textSize="12sp"
        android:paddingLeft="70dp"
        android:textColorHint="#000"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="248dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="393dp"/>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@drawable/smile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="236dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="380dp"/>

    <ImageView
        android:id="@+id/img_bell"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="65dp"
        android:src="@drawable/bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_blue"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/blue"
        app:layout_constraintStart_toEndOf="@+id/img_bell"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="11dp"/>

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="450dp"
        android:layout_height="10dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/text_smile1" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/img_line"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="25dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>